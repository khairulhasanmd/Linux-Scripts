[gerrit]
	basePath = git
	canonicalWebUrl = http://<ip of gerrit installed machine:port>/
[database]
	type = h2
	database = db/ReviewDB
[index]
	type = LUCENE
[auth]
	type = http
	
[sendemail]
	smtpServer = localhost
[container]
	user = srbd
	javaHome = /usr/lib/jvm/java-8-oracle/jre
[sshd]

	listenAddress = *:29418
[httpd]
	listenUrl = http://*:8085/
[cache]
	directory = cache
